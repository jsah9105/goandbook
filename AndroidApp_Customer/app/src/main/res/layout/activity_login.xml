<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mandipsilwal.customerapplication.Login"
        android:background="@color/colorPrimaryDark">


    <Button
        android:background="@drawable/googlebutton"
        android:id="@+id/google"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_alignEnd="@+id/facebook" />

    <Button
        android:layout_width="380dp"
        android:layout_height="54dp"
        android:id="@+id/facebook"
        android:background="@drawable/facebook"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/google"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Login"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login" />

    <Button
        android:text="Signup"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:id="@+id/signUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userNameRegister"
        android:hint="Username"
        android:textAlignment="center"
        android:background="@android:color/background_light"
        android:layout_above="@+id/passwordRegister"
        android:layout_alignStart="@+id/passwordRegister"
        android:layout_marginBottom="5dp"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordRegister"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/facebook"
        android:layout_marginStart="49dp"
        android:background="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:text="Skip"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:id="@+id/skip"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_blue_bright"
        tools:textCursorDrawable="?attr/colorBackgroundFloating"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/signUp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:lineSpacingExtra="10sp" />

</RelativeLayout>
