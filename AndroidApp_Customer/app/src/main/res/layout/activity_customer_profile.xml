<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memberinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_profile"
    android:background="@color/colorPrimary"
    android:textAlignment="center">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:padding="4dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:text="First Name:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <EditText
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:inputType="textPersonName"
                android:text="John"
                android:id="@+id/display_firstname"
                android:textSize="14sp"
                android:focusableInTouchMode="false"
                android:onClick="onClickFirstName"
                android:fontFamily="sans-serif" />
        </TableRow>

        <View android:layout_height="1dip" android:background="#FF909090" />

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Middle Name:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <EditText
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:text="  "
                android:id="@+id/display_middleName"
                android:textSize="14sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onClickMiddleName"
                android:fontFamily="serif" />
        </TableRow>

        <View android:layout_height="1dip" android:background="#FF909090" />

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Last Name:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <EditText
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:text="Smith"
                android:id="@+id/display_lastname"
                android:textSize="14sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onClickLastName"
                android:fontFamily="sans-serif" />
        </TableRow>

        <View android:layout_height="1dip" android:background="#FF909090" />

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Gender:"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginLeft="9dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <Spinner
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:id="@+id/gender"
                android:entries="@array/genders_array"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="52dp"
                android:textSize="12sp"
                android:fontFamily="serif"
                android:popupBackground="@color/colorPrimary" />

        </TableRow>

        <View android:layout_height="1dip" android:background="#FF909090" />

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Cellphone:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <EditText
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:inputType="number"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:text="81700000"
                android:id="@+id/display_cellNumber"
                android:textSize="14sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onClickPhone"
                android:fontFamily="sans-serif"/>
        </TableRow>

        <View android:layout_height="1dip" android:background="#FF909090" />


        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Email:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <EditText
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="johnsmith@email.com"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/display_email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:onClick="onClickEmail"
                android:fontFamily="sans-serif" />
        </TableRow>

    </TableLayout>


    <TextView
        android:text="My Profile"
        android:fontFamily="serif"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:textStyle="normal|bold"
        android:layout_height="70dp"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/change_password"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:onClick="changePassword"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="  Save Changes "
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/update"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:onClick="save"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/change_password"
        android:layout_alignParentStart="true" />


</RelativeLayout>